            margin-top: 20px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            color: white;
        }
        button[name="action"][value="on"] {
            background-color: #4CAF50; /* Green */
        }
        button[name="action"][value="off"] {
            background-color: #f44336; /* Red */
        }
        button[name="motor_action"][value="forward"] {
            background-color: #2196F3; /* Blue */
        }
        button[name="motor_action"][value="backward"] {
            background-color: #FF9800; /* Orange */
        }
        button[name="motor_action"][value="stop"] {
            background-color: #555; /* Gray */
        }
        #terminal {
            margin-top: 20px;
