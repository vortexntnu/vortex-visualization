<body>
    <h1>LED and Motor Controller</h1>
    <form action="/control" method="post">
        <div class="control-buttons">
            <button name="action" value="on" type="submit">Turn LED On</button>
            <button name="action" value="off" type="submit">Turn LED Off</button>
        </div>
        <div class="control-buttons">
            <button name="motor_action" value="forward" type="submit">Motor Forward</button>
            <button name="motor_action" value="backward" type="submit">Motor Backward</button>
            <button name="motor_action" value="stop" type="submit">Motor Stop</button>
        </div>
    </form>

    <div id="terminal">Terminal: Press W, A, S, D to control the motor.</div>

    <script>
        const terminal = document.getElementById('terminal');

        // Function to send motor control commands
        function sendMotorCommand(action) {
            fetch('/control', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `motor_action=${action}`,
            });
        }

        // Capture keyboard inputs
        document.addEventListener('keydown', (event) => {
            let command = '';
            switch (event.key.toLowerCase()) {
                case 'w':
                    command = 'forward';
                    break;
                case 's':
                    command = 'backward';
                    break;
                case 'a':
                    command = 'left';
                    break;
                case 'd':
                    command = 'right';
                    break;
                case ' ':
                    command = 'stop';
                    break;
                default:
                    return; // Ignore other keys
            }
            sendMotorCommand(command);
            terminal.innerHTML += `<br>Key pressed: ${event.key} (${command})`;
            terminal.scrollTop = terminal.scrollHeight; // Auto-scroll to bottom
        });
    </script>
</body>
